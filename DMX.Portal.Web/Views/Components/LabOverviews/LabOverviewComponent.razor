@using DMX.Portal.Web.Views.Components.DeviceOverviews
@using DMX.Portal.Web.Views.Components.LabOverviewDetails
@using DMX.Portal.Web.Views.Bases
@using PrettyBlazor
@using DMX.Portal.Web.Views.Components.Statuses
@using DMX.Portal.Web.Views.Components.LabTitles

<StyleBase @ref=StyleElement
           Style=LabOverviewStyle />

<div @onclick=NavigateToLabCommands>
    <ContainerBase @ref=Container
                   CssClass="lab-overview">

        <ContainerBase @ref=LabOverviewDetailsContainer
                       CssClass="lab-overview-details">

            <ContainerBase @ref=LabTitleStatusContainer
                           CssClass="lab-overview-title">

                <LabTitleComponent  @ref=LabTitleComponent 
                                    Lab=@Lab />

            </ContainerBase>

            <LabOverviewDetailsComponent @ref=Details
                                         Lab="@Lab" />

        </ContainerBase>

        <div>

            <ContainerBase @ref="DevicesContainer"
                           CssClass="device-overviews">

                <Iterations Items="@Lab.Devices" 
                            Context="Device">

                    <DeviceOverviewComponent Device="Device" />

                </Iterations>

            </ContainerBase>

        </div>
    </ContainerBase>
</div>