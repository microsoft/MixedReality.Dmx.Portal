@page "/labcommands/{LabId}"
@using DMX.Portal.Web.Models.Services.Foundations.Labs
@using DMX.Portal.Web.Models.Views.Components.LabOverviewListComponents
@using DMX.Portal.Web.Models.Views.Components.StatusComponents
@using PrettyBlazor;
@using DMX.Portal.Web.Views.Bases;
@using DMX.Portal.Web.Views.Components.Statuses;

<style>
